@model JWTinWebAPP.Models.Employee
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enter Employee Details</h1>

@using (Html.BeginForm("AddEmployee", "Employee"))
{
    <div class = "form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
    </div>

    <div class = "form-group">
        @Html.LabelFor(m => m.Department)
        @Html.TextBoxFor(m => m.Department, new {@class = "form-control"})
    </div>

    <div class = "form-group">
        @Html.LabelFor(m => m.DateOfBirth)
        @Html.TextBoxFor(m => m.DateOfBirth, "{dd/MM/yyyy}", new {@class = "form-control"})
    </div>

    <div class = "form-group">
        @Html.LabelFor(m => m.Salary)
        @Html.TextBoxFor(m => m.Salary, new {@class = "form-control"})
    </div>

    <br/>
    <div class = "checkbox">
        <label>
             @Html.CheckBoxFor(m => m.Permanent) Permanent
        </label>
    </div>

    <br/>
    <button type="submit" class="btn btn-primary">SAVE</button>
}